{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../logs/api.mg-dashboard.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {CorrelationId} {Level:u3}] {Username} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "MqttClientConfiguration": {
    "ClientId": "test-device-1",
    "Host": "localhost",
    "Port": "1883"
  },
  "DeviceConfiguration": {
    "Id": "test-device-1",
    "Name": "TestDevice1"
  },
  "SerialConfiguration": {
    "BaudRate": 9600,
    "ReadWriteTimeout": 100,
    "ConnectionTimeout": 10000,
    "MessageSerparator": ";"
  }
}